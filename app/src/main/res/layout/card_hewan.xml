<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#090909">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_cardview"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0288D1">

            <ImageView
                android:id="@+id/card_imageview"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_cruelty_free_24" />

            <TextView
                android:id="@+id/card_namahewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/card_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_jenishewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="95dp"
                android:text="TextView"
                android:textColor="#0E0E0E"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/card_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_usiahewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="140dp"
                android:text="TextView"
                android:textColor="#0E0E0E"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/card_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/card_editbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="180dp"
                android:backgroundTint="#FBC02D"
                android:text="edit"
                app:layout_constraintStart_toEndOf="@+id/card_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:text="Usia :"
                android:textColor="#020202"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/card_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/card_deletebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="180dp"
                android:backgroundTint="#D32F2F"
                android:text="delete"
                app:layout_constraintStart_toEndOf="@+id/card_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/card_interactbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/card_imageview"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_adjust_24" />

            <ImageView
                android:id="@+id/card_feedbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toEndOf="@+id/card_imageview"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_fastfood_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>